<?xml version="1.0"?>
<config>
    <sections>
        <web>
            <groups>
                <cookiebot translate="label" module="customgento_cookiebot">
                    <label>Cookiebot Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>420</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Cookiebot Integration</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <id translate="label">
                            <label>Cookiebot ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </id>
                        <blocking_mode translate="label">
                            <label>Blocking Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>customgento_cookiebot/source_blockingMode</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </blocking_mode>
                        <use_google_consent_mode translate="label">
                            <label>Google Consent Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </use_google_consent_mode>
                    </fields>
                </cookiebot>
            </groups>
        </web>
    </sections>
</config>
